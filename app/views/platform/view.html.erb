<h1>View map</h1>
<div id="mapid"></div>

<script type="text/javascript">
    $(document).on("turbolinks:load", function() {
        var map = L.map('mapid', {
            center: [29.961187, -90.066967],
            zoom: 11
        });
        
        L.tileLayer('http://{s}.tiles.wmflabs.org/bw-mapnik/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        <% routes = Route.all %>
        <% routes.each do |route| %>
            var coordPath = <%= j route.geometry['coordinates'].to_s %>
            var pathColor = "<%= j route.color %>"
            var newCoordPath = [];
            <% route.geometry['coordinates'].each do |sub_route| %>
                thisRoute = <%= sub_route %>;
                newInnerPath = []
                for (var j = 0; j < coordPath[0].length; j++) {
                    var lon = coordPath[0][j][0]
                    var lat = coordPath[0][j][1]
                    newInnerPath.push([lat, lon]);
                }
                newCoordPath.push(newInnerPath);
            <% end %>
            var polyLine = L.polyline(newCoordPath, {color: '#'+pathColor}).addTo(map);
            map.fitBounds(polyLine.getBounds());
        <% end %>


